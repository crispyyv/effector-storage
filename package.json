{
  "name": "effector-storage",
  "description": "Module for Effector to sync stores with localStorage or sessionStorage",
  "version": "2.0.0",
  "author": "Victor Didenko <yumaa.verdin@gmail.com> (https://yumaa.name)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumauri/effector-storage"
  },
  "bugs": {
    "url": "https://github.com/yumauri/effector-storage/issues"
  },
  "homepage": "https://github.com/yumauri/effector-storage#readme",
  "keywords": [
    "effector",
    "persist",
    "localstorage",
    "local storage",
    "sessionstorage",
    "session storage"
  ],
  "main": "index.js",
  "scripts": {
    "build": "yarn size && dual-publish --check",
    "size": "size-limit",
    "test": "nyc ava",
    "format": "prettier --write \"**/*.js\"",
    "lint": "xo index.js sync/index.js unit/index.js",
    "clean": "rm -rf dual-publish-tmp .nyc_output coverage",
    "release": "np --yolo --no-release-draft --contents ./dual-publish-tmp",
    "version": "yarn build"
  },
  "size-limit": [
    {
      "limit": "142 B",
      "path": "index.js"
    },
    {
      "limit": "213 B",
      "path": "sync/index.js"
    },
    {
      "limit": "280 B",
      "path": "unit/index.js"
    }
  ],
  "clean-publish": {
    "files": [
      "images",
      ".gitignore",
      "jestconfig.json",
      "tsconfig.json",
      "tslint.json"
    ],
    "fields": [
      "scripts",
      "xo",
      "ava",
      "nyc"
    ],
    "packageManager": "yarn"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "no-var": "off",
      "no-unused-expressions": "off",
      "no-multi-assign": "off",
      "no-return-assign": "off"
    }
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*",
      "!test/**/*.mock.js"
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.2",
    "ava": "^3.5.1",
    "dual-publish": "^0.8.6",
    "effector": "^20.13.4",
    "ninos": "^3.0.0",
    "np": "^6.2.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "size-limit": "^4.4.2",
    "xo": "^0.28.1"
  },
  "peerDependencies": {
    "effector": "^20.13.4"
  }
}
