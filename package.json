{
  "name": "effector-storage",
  "description": "Module for Effector to sync stores with localStorage or sessionStorage",
  "version": "1.0.2",
  "author": "Victor Didenko <yumaa.verdin@gmail.com> (https://yumaa.name)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumauri/effector-storage"
  },
  "bugs": {
    "url": "https://github.com/yumauri/effector-storage/issues"
  },
  "homepage": "https://github.com/yumauri/effector-storage#readme",
  "keywords": [
    "effector",
    "persist",
    "localstorage",
    "local storage",
    "sessionstorage",
    "session storage"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts",
    "sync.js",
    "sync.d.ts"
  ],
  "scripts": {
    "build": "tsc && yarn size",
    "size": "size-limit",
    "//minify": "terser index.js -o index.min.js -c -m && terser sync.js -o sync.min.js -c -m",
    "//test": "jest --config jestconfig.json",
    "format": "prettier --write \"*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "clean": "rm -f index.js index.d.ts sync.js sync.d.ts",
    "release": "np --yolo --no-release-draft",
    "version": "yarn build"
  },
  "size-limit": [
    {
      "limit": "144 B",
      "path": "index.js"
    },
    {
      "limit": "223 B",
      "path": "sync.js"
    }
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "effector": "^20.13.4",
    "jest": "^25.2.1",
    "np": "^6.2.0",
    "prettier": "^2.0.2",
    "size-limit": "^4.4.1",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.16.0",
    "tslint-config-standard-plus": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "effector": "^20.13.4"
  }
}
